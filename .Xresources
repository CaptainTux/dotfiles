! ------------------------------------------------------------------------------
! UXTerm
! ------------------------------------------------------------------------------

! termtype
UXTerm*termName: xterm-256color

UXTerm*cursorColor:        white
! UXTerm*VT100.geometry:     90x30
! UXTerm*font:               Monospace
UXTerm*font:               DejaVuSansMono Nerd Font:style=Regular
UXTerm*faceSize:           12
UXTerm*dynamicColors:      true
UXTerm*utf8:               2
UXTerm*eightBitInput:      true
UXTerm*saveLines:          150000
UXTerm*scrollKey:          true
UXTerm*scrollTtyOutput:    false
UXTerm*scrollBar:          false
UXTerm*rightScrollBar:     false
UXTerm*jumpScroll:         true
UXTerm*multiScroll:        true
UXTerm*toolBar:            false

! ------------------------------------------------------------------------------
! XTerm
! ------------------------------------------------------------------------------

! termtype
XTerm*termName: xterm-256color

XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?

XTerm.vt100.translations: #override \n\
    Ctrl <Key>M: maximize() \n\
    Ctrl <Key>R: restore()

! highlight selected area
xterm*highlightSelection: true

XTerm.vt100.saveLines: 65536

XTerm.vt100.on4Clicks: group
XTerm.vt100.on5Clicks: all

XTerm*VT100.Translations: #override \
                          Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                          Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

! Allow selecting email/url by double-click
XTerm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

XTerm.vt100.metaSendsEscape: true

XTerm*VT100.eightBitInput: false
XTerm*vt100.formatOtherKeys: 1

XTerm*loginshell: true
XTerm*borderLess: true

XTerm*locale: true

XTerm*cursorColor:        white
! XTerm*VT100.geometry:     90x30
XTerm*font:               Monospace
XTerm*faceName:           DejaVuSansMono Nerd Font:style=Regular
XTerm*renderFont:         true
XTerm*faceSize:           14
XTerm*dynamicColors:      true
XTerm*utf8:               2
XTerm*eightBitInput:      true
XTerm*saveLines:          150000
XTerm*scrollKey:          true
XTerm*scrollTtyOutput:    false
XTerm*scrollBar:          false
XTerm*rightScrollBar:     false
XTerm*jumpScroll:         true
XTerm*multiScroll:        true
XTerm*toolBar:            false
! XTerm*cursorBlink:        true

